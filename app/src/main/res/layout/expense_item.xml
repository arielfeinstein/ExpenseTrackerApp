<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/expense_item_iv"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="100dp"
        android:padding="15dp"
        android:layout_gravity="center"
        android:src="@drawable/food_category"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/expense_item_expense_description_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expense Description"
            android:textColor="@color/black"
            android:minLines="1"
            android:maxLines="3"
            android:ellipsize="end"
            android:gravity="center"/>

        <TextView
            android:id="@+id/expense_item_date_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="01/01/2025"
            android:gravity="center" />

    </LinearLayout>

    <TextView
        android:id="@+id/expense_item_amount_tv"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="50â‚ª"
        android:textColor="@color/black"
        android:textStyle="bold"/>

</LinearLayout>