<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:padding="10dp"
    tools:context=".CategoryActivity">

    <ImageView
        android:id="@+id/imgCategoryIcon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txtCategoryName"
        android:src="@drawable/food_category"/>

    <TextView
        android:id="@+id/txtCategoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgCategoryIcon"
        app:layout_constraintBottom_toTopOf="@+id/timePeriodView"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:text="@string/category_name"/>

    <include
        android:id="@+id/timePeriodView"
        layout="@layout/weekly_monthly_daily_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCategoryName"
        app:layout_constraintBottom_toTopOf="@+id/totalAmountSection"/>

    <!-- Total Amount Display -->
    <LinearLayout
        android:id="@+id/totalAmountSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timePeriodView"
        app:layout_constraintBottom_toTopOf="@+id/recyclerCategoryExpenses"
        android:orientation="vertical"
        android:background="@drawable/white_slightly_rounded_background"
        android:paddingVertical="8dp"
        android:paddingHorizontal="50dp"
        android:layout_marginVertical="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spent"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginVertical="4dp"/>

        <TextView
            android:id="@+id/fragment_home_amount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0.00â‚ª"
            android:textColor="@color/black"
            android:background="@drawable/secondary_color_rounded_background"
            android:paddingVertical="4dp"
            android:paddingHorizontal="20dp"
            android:layout_marginVertical="4dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCategoryExpenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/totalAmountSection"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>